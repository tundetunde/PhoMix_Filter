<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/ad_view" android:id="@+id/ads"/>
    <!--<include layout="@layout/ad_view3" android:id="@+id/ads"/> -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Your Grid"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/tvTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="20dp"
                android:text="Layout with 2 Pictures"
                android:id="@+id/tvSubMenu1" />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="3"
                android:rowCount="1"
                android:id="@+id/gL2"
                android:tag="griddy">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid2a"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btGrid2a"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid2b"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btGrid2b"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid2c"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btGrid2c"
                    />

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Layout with 3 Pictures"
                android:layout_marginTop="20dp"
                android:id="@+id/tvSubMenu3" />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="3"
                android:rowCount="1"
                android:id="@+id/gL3"
                android:tag="griddy">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid3a"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btGrid3a"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid3b"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btGrid3b"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid3c"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btGrid3c"
                    />

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Layout with 4 Pictures"
                android:layout_marginTop="20dp"
                android:id="@+id/tvSubMenu4" />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="3"
                android:rowCount="1"
                android:id="@+id/gL4"
                android:tag="griddy">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid4a"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btGrid4a"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid4b"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btGrid4b"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid4c"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btGrid4c"
                    />

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Layout with 5 Pictures"
                android:layout_marginTop="20dp"
                android:id="@+id/tvSubMenu5" />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="3"
                android:rowCount="1"
                android:id="@+id/gL5"
                android:tag="griddy">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid5a"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btGrid5a"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid5b"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btGrid5b"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grid5c"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btGrid5c"
                    />
            </GridLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>