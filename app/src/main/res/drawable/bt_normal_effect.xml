        android:gradientRadius="100"
        android:centerX="35%"
        android:centerY="50%"
        android:centerColor="#ff5d68ea"
        android:startColor="#ffe8d5df"
        android:endColor="#ff757589"
        android:type="radial"
        />
    <padding
        android:left="5dp"
        android:top="0dp"
        android:right="5dp"
        android:bottom="0dp"
        />
    <size
        android:width="80dp"
        android:height="40dp"
        />
    <stroke
        android:width="4dp"
        android:color="#ff816dff"
        />
</shape>