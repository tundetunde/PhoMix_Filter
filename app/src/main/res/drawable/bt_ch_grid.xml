        android:gradientRadius="100"
        android:centerX="35%"
        android:centerY="50%"
        android:centerColor="#5D68EA"
        android:startColor="#E8E8E8"
        android:endColor="#757589"
        android:type="radial"
        />
    <padding
        android:left="3dp"
        android:top="0dp"
        android:right="3dp"
        android:bottom="0dp"
        />
